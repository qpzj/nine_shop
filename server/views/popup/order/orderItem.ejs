<!DOCTYPE html>
<html class="x-admin-sm">
<%- include('../../common/head'); %>

<body>
 
    <div class="x-nav">
        <span class="layui-breadcrumb">
            <!-- <a href="user/add">添加用户</a> -->
           
        </span>
        <a class="layui-btn layui-btn-small" style="line-height:1.6em;margin-top:3px;float:right" onclick="location.reload()"
            title="刷新">
            <i class="layui-icon layui-icon-refresh" style="line-height:30px"></i>
        </a>
    </div>
    



<div class="x-nav">
        订单号：<%=orderItem.order_no%>(<%=orderItem.update_time%>) </br>  
       
        
        
      </div>
      <div class="layui-fluid">
          <div class="layui-row layui-col-space15">
              <div class="layui-col-md12">
                  <div class="layui-card">
                     
                      <div class="layui-card-header">
                          
                            收货地址：<%=orderItem.address%></br>
                      </div>
                      <div class="layui-card-body ">
                          <table class="layui-table layui-form">
                            <thead>
                              <tr>
                             
                                <th>订单ID</th>
                                <th>商品名</th>
                                <th>价格</th>
                                <th>图片</th>
                                <th>数量</th>
                                <!-- <th>操作</th> -->
                            </thead>
                            <tbody>
                           
                                    <%for(var i=0;i<orderItem.order_products.length;i++){%>   <tr>
                                            <td><%=orderItem.order_products[i].order_id%></td>
                                            <td><%=orderItem.order_products[i].product.name%></td>
                                            <td><%=orderItem.order_products[i].product.price%></td>
                                            <td><img src="<%=orderItem.order_products[i].product.main_img_url%>" alt=""></td>
                                            <td><%=orderItem.order_products[i].count%></td>
                                            <!-- <td class="td-manage">
                                
                                                    <a title="删除" onclick="member_del(this,<%=orderItem.order_products[i].order_id%>)" href="javascript:;">
                                                      <i class="layui-icon">&#xe640;</i>
                                                    </a>
                                                  </td> -->
                                        </tr>
                                            <%}%>
                              
                               <script>
                                 /*用户-删除*/
      function member_del(obj,id){
          layer.confirm('确认要删除吗？',function(index){
              //发异步删除数据
              $(obj).parents("tr").remove();
              layer.msg('已删除!',{icon:1,time:1000});

              $.get('',{id:id})
          });
      }</script>
                              </tr>
                            </tbody>
                          </table>
                      </div>
                     
                  </div>
              </div>
          </div>
      </div> 

</body>
<script>
    
    
        layui.use('table', function(){
          var table = layui.table;
        })
         
        </script>

</html>